<Window x:Class="SimplyTotalCommander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplyTotalCommander"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="3" Margin="0,0,-0.4,0">
            <TabItem Header="File List"
                     ToolTip="Most common file details">
                <WrapPanel Orientation="Horizontal" Margin="0,0,-2,-2">
                  <!-- *** Showing table with details of files from list. *** -->
                    <DataGrid x:Name="dataGridOfFiles" 
                  AutoGenerateColumns="True" 
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False" 
                  SelectionMode="Extended" 
                  SelectionUnit="CellOrRowHeader"
                  Margin="0,0,399.6,0" Width="623"
                  VerticalAlignment="Top" Height="275" SelectionChanged="DataGridOfFiles_SelectionChanged"
                  >
                        <DataGrid.FrozenColumnCount>1</DataGrid.FrozenColumnCount>
                    </DataGrid>
                  <!-- *** Select or search for a file in currnet directory. *** -->
                  <ComboBox SelectionChanged="Button_Click" 
                              x:Name="SelectedFile" 
                              IsEditable="True" 
                              IsTextSearchEnabled="True" 
                              Height="35" 
                              Width="393" 
                              VerticalAlignment="top"
                              >
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding}" Background="#00185E8D"/>
                                    <Rectangle Fill="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Height="33" Click="Button_Click_1">Copy</Button>
                </WrapPanel>
            </TabItem>
          <!-- *** Putting start path for search. *** -->
            <TabItem Header="Search options">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="383*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="100 20" Grid.Column="1" 
                               Text="Search in directory :" />
                    <TextBlock Margin="100 40" 
                               Grid.Column="1" >Path :</TextBlock>
                    <TextBox x:Name="NewPath" 
                             Margin="130.4,40,324,322.2" 
                             Grid.Column="1" />
                    <Button Margin="28.4,119,616,243.2" 
                            RenderTransformOrigin="2.961,1.4" 
                            Click="Button_Click" 
                            Grid.Column="1">Refresh</Button>
                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
